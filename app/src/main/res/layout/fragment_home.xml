<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Producto 1 -->
        <LinearLayout
            android:id="@+id/product_1_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/product_1_imageview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/salad1"/>

            <TextView
                android:id="@+id/product_1_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto 1"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/product_1_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/product_1_add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar al carrito"
                android:backgroundTint="#49C07C"/>

        </LinearLayout>

        <!-- Producto 2 -->
        <LinearLayout
            android:id="@+id/product_2_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/product_2_imageview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/salad1"/>

            <TextView
                android:id="@+id/product_2_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto 2"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/product_2_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$20.00"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/product_2_add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar al carrito"
                android:backgroundTint="#49C07C"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>












